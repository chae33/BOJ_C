//2438

#include <stdio.h>
int main(void){
int i,n,j;
scanf("%d",&n);

for(j=1;j<=n;j++){ 
	for(i=1;i<=j;i++){
	printf("*");
}
printf("\n");
}
}



//2439

#include <stdio.h>
int main(void){
int i,n,j,k;
scanf("%d",&n);

for(j=1;j<=n;j++){ 
	for(k=n-j-1;k>=0;k--){
	printf(" ");
}

for(i=1;i<=j;i++){
	printf("*");
}
printf("\n");
}
}
